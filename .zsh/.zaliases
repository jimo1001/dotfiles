# -*- coding: utf-8; mode: shell-script; -*-
#--------------------------------------------------
# Alias configuration
#--------------------------------------------------

## expand aliases before completing
setopt complete_aliases # aliased ls needs if file/dir completions work

alias where="command -v"
alias j="jobs -l"

case "${OSTYPE}" in
freebsd*|darwin*)
  alias ls="ls -G -w"
  ;;
linux*)
  alias ls="ls --color"
  ;;
esac

alias ls="ls --color=always"
alias l="ls -l"
alias ll="ls -la"
alias la="ls -a"
alias lf="ls -F"
alias du="du -h"
alias df="df -h"
alias tl="tail -f"
alias su="su -l"
alias mf="mfiler2"
alias em="emacs -nw"

#alias -g L="| $PAGER"
alias -g L="| less -E"
alias -g G="| grep"

alias gd='dirs -v; echo -n "select number: "; read newdir; cd -"$newdir"'

alias -s zip=zipinfo
alias -s tgz=gzcat
alias -s gz=gzcat
alias -s tbz=bzcat
alias -s bz2=bzcat

alias -s log=$PAGER
alias -s java=$PAGER
alias -s c=$PAGER
alias -s h=$PAGER
alias -s C=$PAGER
alias -s cpp=$PAGER
# alias -s sh=$PAGER
alias -s txt=$PAGER
alias -s xml=$PAGER

alias -s html=$BROWSER
alias -s xhtml=$BROWSER

alias -s gif=display
alias -s jpg=display
alias -s jpeg=display
alias -s png=display
alias -s bmp=display

alias -s mp3=amarok
alias -s m4a=amarok
alias -s ogg=amarok

alias -s mpg=svlc
alias -s mpeg=svlc
alias -s avi=svlc
alias -s mp4v=svlc

alias tmux='LANG=C LC_ALL=C tmux -u -2'

## rdic
export DICTDIR=${HOME}/dict
alias adic="rdic -x $DICTDIR/alc98/eijiro098.euc $DICTDIR/alc98/waeiji98.euc $DICTDIR/alc98/ryaku98.euc $DICTDIR/alc98/reiji98.euc"
alias pdic="rdic -x $DICTDIR/pdic98/eijiro098.euc $DICTDIR/pdic98/waeiji98.euc $DICTDIR/pdic98/ryaku98.euc $DICTDIR/pdic98/reiji98.euc"

## getmailcount.rb
alias getmail="getmailcount.rb >> $HOME/tmp/getmailcount.log 2>&1 &"

## root alias
case ${UID} in
0)
    alias checkports='pkg_version -v -l \<'
    alias updateports='cd /usr/ports && make update fetchindex && checkports'
    alias updateindex='cd /usr/ports && make index && portsdb -u'
    alias portsclean portsclean -CD
    ;;
esac
